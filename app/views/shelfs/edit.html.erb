<div style="width: 40vw;">
<h1>Edit Shelf</h1>
<form class="form-horizontal" method="POST" action="<%= shelf_path  %>">
  <input name="authenticity_token" value="<%= form_authenticity_token%>"  type="hidden" >
  <input name="_method" value="PUT"  type="hidden" >

  <div class="form-group">
    <label class="col-sm-2 control-label">Shelf Name</label>
    <div class="col-sm-10">
     <input class="form-control" name="shelf[name]" value="<%= @shelf.name %>"/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Section</label> 
    <div class="col-sm-10">
      <select class="form-control" name="shelf[section_id]">
      <option>Select Section</option>
      <% Section.all.each do |section| %>
        <option value="<%= section.id %>" <%= 'selected' if @shelf.section_id == section.id %>><%= section.name %></option>
      <% end %>
    </select>
    </div>
  </div>

  <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Update Shelf</button>
      </div>
  </div>

</form>
</div>
